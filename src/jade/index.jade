	body.green
		header.clearfix
			.header__top
				.header__logo
					img(src="./assets/img/logo.jpg")
			.header__bottom.clearfix
				nav.breadcrumb.pull-left
					ul.breadcrumb__list.clearfix
						li
							a(href="#") Merisant
						li
							a(href="#") Equal - APAC
						li 
							a(href="#") Design
				nav.header__bottom__menu.pull-right
					ul.header__bottom__menu__list.clearfix
						li
							a(href="#") Intranet
						li
							a(href="#") Projects Admin
						li
							a(href="#") Logout

		.container-fluid.no-padding.clearfix
			aside.left-menu
				ul.tree-view

			section.content
				.content__header.clearfix
					h1.pull-left Design
					a.button(href="#").pull-right Edit
